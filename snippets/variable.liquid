{% style %}

@font-face {
  font-family: 'News Gothic';
  src: url({{'NewsGothicBT-Italic.ttf' | asset_url }}) format('truetype');
  font-weight: normal;
  font-style: italic;
  font-display: swap;
}

@font-face {
  font-family: 'News Gothic';
  src: url({{'MNewsGothic-Bold.ttf' | asset_url }}) format('truetype');
  font-weight: bold;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Berkeley';
  src: url({{'Berkeley-Book.ttf' | asset_url }}) format('truetype');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'News Gothic'; 
  src: url({{'NewsGothicBT-Roman.ttf' | asset_url }}) format('truetype');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: "Amazone BT";
  src: url({{'AmazoneBT-Regular.ttf' | asset_url }}) format('truetype');
  font-weight: normal;
  font-style: italic;
  font-display: swap;
}

@font-face {
  font-family: "turbo";
  src: url({{ 'turbo.eot' | asset_url }});
  src: url({{ 'turbo.eot' | asset_url }}) format("embedded-opentype"), url({{ 'turbo.woff' | asset_url }}) format("woff"), url({{ 'turbo.ttf' | asset_url }}) format("truetype"), url({{ 'turbo.svg' | asset_url }}) format("svg");
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

{% if settings.nav_font_extra_status %}
  {% assign nav__font = settings.nav_font_extra %}
{% else %}
  {% assign nav__font = settings.nav__font.family %}
{% endif %}

{% if settings.regular_extra_status %}
  {% assign regular__font = settings.regular_font_extra %}
{% else %}
  {% assign regular__font = settings.regular__font.family %}
{% endif %}

{% if settings.logo_font_extra_status %}
  {% assign logo__font = settings.logo_font_extra %}
{% else %}
  {% assign logo__font = settings.logo__font.family %}
{% endif %}

{% if settings.headline_font_extra_status %}
  {% assign headline__font = settings.headline_font_extra %}
{% else %}
  {% assign headline__font = settings.headline__font.family %}
{% endif %}

{% assign custom_msg_font = settings.custom_msg_font.family %}

{% if settings.slideshow_font_extra_status %}
  {% assign slideshow_headline__font = settings.slideshow_font_extra %}
{% else %}
  {% assign slideshow_headline__font = settings.slideshow_headline__font.family %}
{% endif %}

{% if settings.page_font_extra_status %}
  {% assign page_headline__font = settings.page_font_extra %}
{% else %}
  {% assign page_headline__font = settings.page_headline__font.family %}
{% endif %}

{% if settings.slideshow_subtitle_font_extra_status %}
  {% assign slideshow_subtitle__font = settings.slideshow_subtitle_font_extra %}
{% else %}
  {% assign slideshow_subtitle__font = settings.slideshow_subtitle__font.family %}
{% endif %}

{% assign font_size_header = settings.headline_font_size %}
{% assign font_size_column = settings.headline_font_size %}


{% assign secondary_button_color = settings.btn_color | color_extract: 'lightness' %}
{% if secondary_button_color > 80 %}
  {% assign button_color = settings.regular_color %}
{% else %}
  {% assign button_color = '#ffffff' %}
{% endif %}
{% assign quick_shop_text_color = settings.product_hover_text_color | color_extract: 'lightness' %}
{% if quick_shop_text_color > 50 %}
  {% assign text_color = settings.regular_color %}
{% else %}
  {% assign text_color = '#ffffff' %}
{% endif %}

{% assign featured_links_text_color = settings.featured_links_background | color_extract: 'lightness' %}
{% if featured_links_text_color > 50 %}
  {% assign featured_text_color = settings.regular_color %}
{% else %}
  {% assign featured_text_color = '#ffffff' %}
{% endif %}
{% assign top_bar_background_color_lightness = settings.top_bar_bg_color | color_extract: 'lightness' %}
{% if top_bar_background_color_lightness > 50 %}
  {% assign top_bar_background_color = 'select.png' | asset_url %}
{% else %}
  {% assign top_bar_background_color = 'select_light.png' | asset_url %}
{% endif %}
{% assign banner_color_lightness = settings.banner_color | color_extract: 'lightness' %}
{% if banner_color_lightness > 50 %}
  {% assign banner_color = '#333333' %}
{% else %}
  {% assign banner_color = '#ffffff' %}
{% endif %}
{% assign banner_button_color_lightness = settings.banner_button_color | color_extract: 'lightness' %}
{% if banner_button_color_lightness > 50 %}
  {% assign banner_button_color = '#333333' %}
{% else %}
  {% assign banner_button_color = '#ffffff' %}
{% endif %}
{% assign regular_color_lightness = settings.regular_color | color_extract: 'lightness' %}
{% if regular_color_lightness > 50 %}
  {% assign regular_color = '#333333' %}
{% else %}
  {% assign regular_color = '#ffffff' %}
{% endif %}
{%- if settings.caption_background -%}
  {% assign banner_hightlight_color = settings.banner_background_color %}
{%- else -%}
  {% assign banner_hightlight_color = settings.banner_button_color %}
{%- endif -%}

{%- if settings.slideshow_shadow != blank -%}
  {% assign shadow = '1px 1px 3px rgba(155, 93, 93, 0.3)' %}
{% else %}
  {% assign shadow = none %}
{%- endif -%}


