{% for product in products %}
<script type="application/json" class="bold-product-json">{%- render 'bold-product', output: 'json' -%}</script>
  {% assign collection_handles = product.collections | map: 'handle' %}
  {% assign variant = bold_selected_or_first_available_variant %}
{%- render 'bold-variant' with variant, output: 'none' -%}

  <div class="product-{{ product.id }} section">
    <div class="product_section js-product_section">
      <div class="product-images half">
          {% render 'product-images',
                  product: product,
                  image_width: 'full'
          %}

        <div class="banner_holder">
          {% if settings.sale_banner_enabled and bold_compare_at_price > bold_price %}
            <div class="sale_banner_product">{{ 'collections.general.sale' | t }}</div>
          {% endif %}

          {% if collection_handles contains 'new' %}
            <div class="new_banner_product">{{ 'collections.general.new' | t }}</div>
          {% endif %}

          {% if collection_handles contains 'pre-order' %}
            <div class="preorder_banner_product">{{ 'collections.general.pre_order' | t }}</div>
          {% endif %}
        </div>
      </div>

      <div class="product-details half">
        {% if settings.display_vendor %}
          <p class="vendor">
            <span class="vendor">{{ product.vendor | link_to_vendor }}</span>
          </p>
        {% endif %}

        {% if variant.sku != blank and settings.display_sku %}
          <p class="sku">
            <span>{{ variant.sku | split: " " | first }}</span>
          </p>
        {% endif %}
        <h1 class="product_name"><a href="{{ product.url }}">{{ product.title }}</a></h1>
        <div class="feature_divider"></div>

        {% if collection_handles contains 'coming-soon' %}
          <p class="modal_price">{{ 'collections.general.coming_soon' | t }}</p>
        {% else %}
          <p class="modal_price">
            <span class="sold_out">{% if variant.available == false %}{{ 'products.product.sold_out' | t }}{% endif %}</span>
            <span content="{{ bold_variant_price | money_without_currency | remove: "," }}" class="{% if variant.compare_at_price > bold_variant_price %}sale{% endif %}">
              <span class="current_price {% if product.available == false %}hidden{% endif %}">
                {% if bold_variant_price > 0 %}
                  <span class="money">{% render 'price-element', price: bold_price %}</span>
                {% else %}
                  {{ settings.free_price_text }}
                {% endif %}
              </span>
            </span>
            <span class="was_price">
            {% if bold_variant_price < variant.compare_at_price and variant.available %}
              <span class="money">{% render 'price-element', price: variant.compare_at_price %}</span>
            {% endif %}
            </span>
          </p>

          {% render 'product-notify-me', product: product %}
        {% endif %}

        {% if settings.product_description_position == "top" %}
          {% if settings.frontpage_display_description and product.description != blank %}
            <div class="description">
              {{ product.description | split: '<!-- split -->' | first }}
            </div>
          {% endif %}
        {% endif %}

        {% unless collection_handles contains 'coming-soon' %}
          <div class="js-product_section product_section">
            {% include 'product-form',
                    context: 'product',
                    collection_handles: collection_handles
            %}
          </div>
        {% endunless %}

        {% if settings.product_description_position == "bottom" %}
          {% if settings.frontpage_display_description and product.description != blank %}
            <div class="description bottom">
            {{ product.description | split: '<!-- split -->' | first }}
            </div>
          {% endif %}
        {% endif %}
      </div>
    </div>
  </div>
{% endfor %}
