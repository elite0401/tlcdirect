<div class="js-quick-shop">
  <div class="quick-shop--content" data-product-id="">
    <div class="quick-shop--sidebar"></div>
    <div class="quick-shop js-product_section">
      <div class="quick-shop__container container js-quick-shop-container media-position--{{ settings.product_images_position }}">
        <div class="quick-shop__gallery one-half column gallery-wrap gallery-arrows--{{ settings.gallery_arrows }} gallery-thumbnails--{{ settings.thumbnail_position }}">
          <div class="gallery product_gallery js-gallery-modal product-{{ product.id }}-gallery transparentBackground--{{ settings.slideshow_button_style }} slideshow-transition--{{ settings.slideshow_animation }} show-gallery-arrows--{{ settings.gallery_arrows }}"
               data-thumbnails-enabled="{{ settings.product_thumbs }}"
               data-gallery-arrows-enabled="{{ settings.gallery_arrows }}"
               data-slideshow-speed="{{ settings.slideshow_speed }}"
               data-slideshow-animation="{{ settings.slideshow_animation }}"
               data-thumbnails-position="{{ settings.thumbnail_position }}"
               data-thumbnails-slider-enabled="{{ settings.enable_thumbnail_slider }}"
               data-zoom="{{ settings.activate_zoom }}"
               data-video-loop="{{ settings.video_looping }}"
               data-product-id="{{ product.id }}">
          </div>
          <div class="js-gallery-navigation"></div>
        </div>
  
        <div class="quick-shop__text-wrap one-half column text-modal-wrap">
          <!--Product banners inserted with JS - populateProductInfo() -->
          <div class="sale_banner_product js-sale-banner"></div>
          <div class="new_banner_product js-new-banner"></div>
          <div class="new_banner_product js-pre-order-banner"></div>
  
          {% if settings.quick_shop_display_vendor %}
            <p class="vendor">
              <span class="vendor js-product-vendor"></span>
            </p>
          {% endif %}
          <div class="top">
            <p class="js-sku"></p>
  
            <h3 class="quick-shop__title js-product-title"></h3>
            <div class="feature_divider"></div>
    
            <div class="modal_price">
              <div class="price__container price__container--display-price-{{ settings.display_price }} {% if settings.display_price %}has-margin-right{% endif %} medium-down--one-whole">
                <p class="compare_price">
                  <span class="was_price  js-was-price"><span class="money"></span></span>
                </p>
                <p class="current_price js-current-price">
                  <span class="money"></span>
                </p>
    
                {% if settings.quick_shop_display_savings %}
                  <span class="sale savings js-savings"></span>
                {% endif %}
              </div>
    
              <div class="sold-out__container medium-down--one-whole">
                <span class="sold_out js-sold-out"></span>
              </div>
            </div>
            <p class="custom-message"></p>
            {% if settings.quick_shop_product_description_position == "top" %}
              {% if settings.quick_shop_full_description %}
                <span class="js-full-description"></span>
                <span class="js-product-details"></span>
              {% else %}
                <p>
                  <span class="js-regular-description"></span>
                  <span class="js-product-details"></span>
                </p>
              {% endif %}
            {% endif %}
    
            <span class="js-product-form"></span>
            <span class="js-notify-form"></span>
    
            {% if settings.quick_shop_product_description_position == "bottom" %}
              {% if settings.quick_shop_full_description %}
                <span class="js-full-description"></span>
                <span class="js-product-details"></span>
              {% else %}
                <p>
                  <span class="js-regular-description"></span>
                  <span class="js-product-details"></span>
                </p>
              {% endif %}
            {% endif %}
          </div>
          
        </div>
      </div>
    </div>
  </div>
  
</div>
