$color-white: #F9F9F9;
.header{
    .top-bar{
        .menu{
            li{
                align-items: center;
                font-family: {{ nav__font }}, {{ settings.nav__font.fallback_families }};
                font-weight: {{ settings.nav__font.weight }};
                font-style: {{ settings.nav__font.style }};
                font-size: {{ settings.nav_font_size | append: 'px' }};
                color: {{ settings.top_bar_color }};
                a{
                    padding-left: 10px;
                    display: inline-block;
                    text-transform: unset;
                }
            }
        }
        .cart-container{
          .mini_cart {
            span{
              text-transform: unset;
            }
          }
        }
    }
    .main-nav__wrapper{
      .main-nav{
        padding: 0;
        .search-container{
          background: linear-gradient(180deg, #FFFFFF 0%,{{ settings.header_bg_color }} 135%);
          max-width: initial;
          padding: 0;
          .search__form{
            margin: 30px auto;
            max-width: 438px;
          }
        }
        .nav {
          padding: 0;
          background: $color-white;
          box-shadow: 0px 19px 36px 2px rgba(0,0,0,0.07);
          .menu {
            .vertical-menu{
              display: flex;
              width: 80%;
              justify-content: space-evenly;
              margin: auto;
            }
          }
        }
        .side-icon{
          position: absolute;
          top: 50%;
          transform: translateY(-68%);
          left: 45px;
        }
      }
    }
}
.cart_content {
  display: none;
}
.top-bar--right-menu{
  svg{
    use, g,path{
      stroke: white;
    }
  }
  .menu{
    padding: 0!important;
    li{
      padding-right: 30px;
      a{
        display: flex!important;
        align-items: center;
        svg{
          margin-right: 10px;
        }
      }
    }
  }
}
.sticky_nav {
  background: white;
  svg{
    use, g,path{
      stroke: #3158A7!important;
    }
  }
  .main-nav {
    flex-wrap: wrap;
    padding: 0;
    justify-content: space-between;
    background: linear-gradient(180deg, rgba(255,255,255,0.02) 0%, {{ settings.header_bg_color }} 100%);
    .side-icon{
      margin-left: 30px;
      max-width: 90px;
      svg{
        width: 100%;
      }
    }
    .header__logo{
      width: auto;
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
      top: 0;
      padding: 24px 0px;
    }
    .search-container{
      max-width: 378px;
      padding-right: 30px;
    }
    .nav{
      width: 100%;
      background: white;
      .menu{
        display: flex;
        justify-content: space-between;
        padding: 0 30px;
        li{
          
        }
      }
      .cart-container{
        .mini_cart{
          padding-left: 30px;
          width: auto;
          display: table;
          padding-right: 0;
          span{
            padding: 0;
            color: black;
          }
        }
      }
    }
  }
}

.shopify-section--featured-promotions{
  .feature-section{
    .carousel-cell{
      width: 100%;
      figcaption{
        .feature-wrap{
          .title{
            margin-bottom: 0;
            line-height: 1;
          }
          .feature-details{
            display: block;
            opacity: 1;
            .description{
              p{
                font-family: {{headline__font}};
                font-weight: 700;
              }
            }
          }
        }
      }
    }
    .flickity-page-dots{
      top: 30px;
      height: 22px;
      .dot{
        width: 6px;
        height: 6px;
        margin: 0;
        background: {{ settings.link_color }};
      }
    }
  }
}