.checkbox{
  input[type="checkbox"]{
    display: none;
  }
  label{
    padding-left: 30px;
    position: relative;
    font-size: $body_size;
    @include font-gothic-regular();
    &::before{
      content: " ";
      padding: 0;
      width: 20px;
      height: 20px;
      display: table;
      border: 1px solid $color-blue;
      border-radius: 0;
      position: absolute;
      left: 0;
      top: -2px;
      background: $color-white;
    }
  }
  input[type="checkbox"]:checked + label::before{
    content: "";
    width: 10px;
    height: 5px;
    position: absolute;
    top: 3px;
    left: 2px;
    border: 2px solid $color-white;
    border-top: none;
    border-right: none;
    background: transparent;
    opacity: 1;
    transform: rotate(-50deg);
    box-sizing: border-box;
    z-index: 10;
    top: 6px;
    left: 7px;
  }
  input[type="checkbox"]:checked + label::after{
    content: " ";
    padding: 0;
    width: 20px;
    height: 20px;
    display: table;
    border: 1px solid $color-blue;
    border-radius: 0;
    position: absolute;
    left: 0;
    top: -2px;
    background: $color-blue;
  }
}