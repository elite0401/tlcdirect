a.button, input[type="submit"].button, .button, .action_button{
  background-color: {{settings.btn_color}};
  border-color: {{settings.btn_color}};
  color: $color-white;
  &:hover{
    background-color: {{settings.btn_hover_color}};
    border-color: {{settings.btn_hover_color}};
  }
  @include font-gothic-bold();
  max-width: 200px;
  width: 100%;
  @include respond-to("medium-down"){
    max-width: initial;
  }
  &.center{
    margin: 10px auto;
    left: 50%;
    transform: translateX(-50%);
  }
  &.border{
    border: 2px solid $color-blue;
    color: {{settings.regular_color}};
    background: transparent;
    padding: 0 10px;
    &:hover{
      border-color: #F4F4F4;
    }
  }
  &.full{
    max-width: 100%;
    width: 100%;
    margin-bottom: 20px;
  }
  
  &.blue{
    background: {{settings.banner_button_color}};
    border-color: {{settings.banner_button_color}};
    &:hover{
      background-color: {{settings.banner_btn_hover_color}};
      border-color: {{settings.banner_btn_hover_color}};
    }
    &.light{
      background: transparent;
      position: relative;
      color: {{settings.banner_button_color}};
      border: none;
      &::after{
        content: "";
        position: absolute;
        background-color: {{settings.banner_button_color}};
        width: 100%;
        height: 100%;
        opacity: 0.1;
        z-index: -1;
      }
      &:hover{
        color: white;
        &::after{
          opacity: 1;
        }
      }
    }
  }
  &.pink{
    background-color: {{settings.btn_color}};
    border-color: {{ settings.btn_color }};
    &:hover{
      background-color: {{settings.btn_hover_color}};
      border-color: {{settings.btn_hover_color}};
    }
    &.light{
      background: transparent;
      position: relative;
      color: {{settings.btn_color}};
      &::after{
        content: "";
