<header>
    {% include 'page-banner' %}
</header>
{% paginate customer.orders by 20 %}
  <section class="section">
    <a name="pagecontent" id="pagecontent"></a>
    
    <div class="container has-padding-top has-padding-bottom">
      <div class="one-whole column">
        <div class="feature_divider"></div>
      </div>

      <aside class="one-third column medium-down--one-whole account-sidebar">
        <h4 class="name">
          <a href="{{ routes.account_url }}" title="{{ 'layout.customer.my_account' | t }}">{{ customer.name }}</a>
        </h4>

        <h4>{{ 'customer.account.dashboard' | t }}</h4>
        <h4>{{ 'customer.account.order_history' | t }}</h4>
        <h4>{{ 'customer.account.address' | t }}</h4>
        <h4>{{ 'customer.account.wish_list' | t }}</h4>
        <h4>{{ 'customer.account.reward' | t }}</h4>
        <h4>{{ 'customer.account.logout' | t }}</h4>
      </aside>

      <main class="two-thirds columns medium-down--one-whole account-main">
        <h4>{{ 'customer.orders.title' | t }}</h4>

        {% if customer.orders.size != 0 %}
          <table id="customer-orders" class="collapsible-table">
            <thead>
              <tr>
                <th>{{ 'customer.orders.order_number' | t }}</th>
                <th>{{ 'customer.orders.date' | t }}</th>
                <th>{{ 'customer.orders.payment_status' | t }}</th>
                <th>{{ 'customer.orders.fulfillment_status' | t }}</th>
                <th>{{ 'customer.orders.total' | t }}</th>
              </tr>
            </thead>

            <tbody>
              {% for order in customer.orders %}
                <tr class="{% cycle 'odd', 'even' %} {% if order.cancelled %}cancelled_order{% endif %}">
                  <td data-label="{{ 'customer.orders.order_number' | t }}">{{ order.name | link_to: order.customer_url }}</td>
                  <td data-label="{{ 'customer.orders.date' | t }}">{{ order.created_at | date: format: "month_day_year" }}</td>
                  <td data-label="{{ 'customer.orders.payment_status' | t }}">{{ order.financial_status_label }}</td>
                  <td data-label="{{ 'customer.orders.fulfillment_status' | t }}">{{ order.fulfillment_status_label }}</td>
                  <td data-label="{{ 'customer.orders.total' | t }}">
                    <span class="money">{% render 'price-element', price: order.total_price %}</span>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        {% else %}
          <p>{{ 'customer.orders.none' | t }}</p>
        {% endif %}

        {% render 'pagination', paginate: paginate %}
      </main>
    </div>
  </section>
{% endpaginate %}

