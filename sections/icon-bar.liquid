<ul class="icon-bar-content flex" style="background-color: {{ section.settings.bg-color }};">
    {% for block in section.blocks %}
      <li class="icon-item">
        {{ block.settings.icon }}
        <p><a href="{{block.settings.link}}">{{ block.settings.title }}</a></p>
      </li>
    {% endfor %}
    </ul>
  {% schema %}
  {
    "name": "Icon bar section",
    "class": "icon-bar-section",
    "settings": [
      {
        "type": "color",
        "id": "bg-color",
        "label": "Background color"
      }
    ],
    "blocks": [
      {
        "type": "icon",
        "name": "Icon block",
        "settings": [
          {
            "type": "html",
            "id": "icon",
            "label": "Icon"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [{
      "name": "Icon bar",
      "category": "Image"
    }]
  }
  {% endschema %}